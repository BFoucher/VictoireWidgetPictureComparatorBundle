{% extends 'VictoireCoreBundle:Widget:show.html.twig' %}

{% block content %}

    <figure class="vic-image-container">
        <img src="{{ rightPicture.url }}" alt="{{ rightPictureLabel }}">
        <span class="vic-image-label" data-type="original">{{ rightPictureLabel }}</span>

        <div class="vic-resize-img"> <!-- the resizable image on top -->
            <img src="{{ leftPicture.url }}" alt="{{ leftPictureLabel }}">
            <span class="vic-image-label" data-type="modified">{{ leftPictureLabel }}</span>
        </div>

        <span class="vic-handle"></span> <!-- slider handle -->
    </figure> <!-- vic-image-container -->

{% endblock content %}
