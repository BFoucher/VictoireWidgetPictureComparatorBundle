{% extends 'VictoireCoreBundle:Widget:new.html.twig' %}
{% trans_default_domain "victoire" %}

{% block form_static %}
<div id="picker-{{ form.mode.vars.data }}" class="vic-tab-pane vic-active">
    {{ form_start(form) }}

    <div class="vic-row">
        <div class="vic-col-sm-6">
            <h4 class="vic-h4">{{ 'widget_picturecomparator.form.leftPicture.heading'|trans }}</h4>
            {{ form_widget(form.leftPicture) }}
            {{ form_errors(form.leftPicture) }}
            <br/><br/>
            {{ form_row(form.leftPictureLabel) }}
        </div>
        <div class="vic-col-sm-6">
            <h4 class="vic-h4">{{ 'widget_picturecomparator.form.rightPicture.heading'|trans }}</h4>
            {{ form_widget(form.rightPicture) }}
            {{ form_errors(form.rightPicture) }}
            <br/><br/>
            {{ form_row(form.rightPictureLabel) }}
        </div>

        {{ form_rest(form) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock form_static %}
